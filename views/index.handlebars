<main class="mx-auto p-3 d-flex justify-content-between">

{{!-- Burgers That You'd Love To Try! --}}
    <div>
    <h3 class="h2-burgers">Burgers That You'd Love To Try!</h3>
      {{#each burgers}}
        {{#unless eaten}}
          {{> burgers/burger-block eaten=true}}
        {{/unless}}
      {{/each}}
    </div>

{{!-- Add A Burger --}}
    <div class="add-burger">
      <i class="fas fa-hamburger fa-3x text-warning"></i>
    <h3>Add a Burger</h3>
        <form class="create-form">

          <div class="form-group">
            <label for="br">Burger Name:</label>
            <input type="text" id="br" name="name">
          </div>

          <div class="form-group">
            <label for="eaten"></label>
            <input type="radio" name="eaten" value="1" checked> Eaten<br>
            <input type="radio" name="eaten" value="0"> Not Eaten
          </div>

          <button class="eat-button"type="submit">Add Burger</button>
        </form>
    </div>
     
{{!-- Burgers that you've eaten! --}}
    <div>
      <h3 class="h2-burgers-eaten">Burgers that you've eaten!</h3>
      {{#each burgers}}
        {{#if eaten}}
          {{> burgers/burger-block eaten=false}}
        {{/if}}
      {{/each}}
    </div>

</main>